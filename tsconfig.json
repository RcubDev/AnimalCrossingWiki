{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@data": ["data/*"],
      "@assets": ["assets/*"],
      "@app": ["app/*"],
      "@services": ["services/*"]
    },
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true
  }
}